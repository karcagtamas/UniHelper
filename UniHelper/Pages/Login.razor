@page "/login"

<div class="h-100 d-flex p-1 justify-content-center align-items-center">
    <MudPaper Class="p-3" Elevation="3">
        <PageTitle Title="Login"/>
        <div class="mb-3">
            <EditForm EditContext="LoginContext">
                <DataAnnotationsValidator></DataAnnotationsValidator>
                <div>
                    <MudTextField @bind-Value="Model.UserName" Label="User Name" FullWidth="true" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Person" />
                    <ValidationMessage For="() => Model.UserName" />
                </div>
                <div>
                    <MudTextField @bind-Value="Model.Password" InputType="@_passwordInput" Label="Password" FullWidth="true" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="SwitchPassword" />
                    <ValidationMessage For="() => Model.Password" />
                </div>
            </EditForm>
        </div>
        <div class="text-center">
             <MudButton OnClick="SignIn" Color="Color.Primary">Login</MudButton>
        </div>
    </MudPaper>
</div>