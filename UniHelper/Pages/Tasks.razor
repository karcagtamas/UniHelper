@page "/tasks"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle Title="Tasks"></PageTitle>

<div>
    <MudIconButton Icon="@Icons.Filled.Add" OnClick="OpenAddDialog"></MudIconButton>

    <MudGrid>
        @foreach (var task in TaskList)
        {
            <MudItem xs="6">
                <TaskComponent TaskData="task" OnEdit="GetLists" OnRemove="GetLists"></TaskComponent>
            </MudItem>
        }
    </MudGrid>
</div>